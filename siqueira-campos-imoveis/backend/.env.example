# Portas dos servidores
PORT=3000
ADMIN_PORT=3001
APP_PORT=3002

# URLs dos domínios
MAIN_DOMAIN=siqueiracamposimoveis.com.br
ADMIN_DOMAIN=admin.siqueiracamposimoveis.com.br
APP_DOMAIN=app.siqueiracamposimoveis.com.br

# Configurações de segurança
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
COOKIE_SECRET=your_cookie_secret_here

# Configurações do banco de dados
DATABASE_URL="postgresql://user:password@localhost:5432/siqueira_campos_imoveis?schema=public"

# Configurações de email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Configurações do Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://app.siqueiracamposimoveis.com.br/api/auth/google/callback

# Configurações de ambiente
NODE_ENV=development
